                                </a>
                                @Html.ActionLink("联系我们", "ContactUs", "Index")
                            </li>
                        </ul>
                    </div>*@

                <!-- 右侧导航 -->
                <ul class="layui-nav larry-header-item righttopnav">
                    <li class="layui-nav-item">
                        <span style="margin-top:4px;">用户名：@Request.Cookies["UserName"].Value</span>
                        <dl class="layui-nav-child">
                            <dd>
                                @Html.ActionLink("个人中心", "UserCenter", "Admin",new { @class="new_tab"})
                            </dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item">
                        <a href="../Log/Logout">
                            <i class="iconfont icon-exit"></i>
                            退出
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- 左侧侧边导航开始 -->
        <div class="layui-side layui-side-bg layui-larry-side" id="larry-side">
            <div class="layui-side-scroll" id="larry-nav-side" lay-filter="side">

                <!-- 左侧菜单 -->
                <ul class="layui-nav layui-nav-tree">
                    <!-- 首页 -->
                    <li class="layui-nav-item layui-this">
                        <a href="@Url.Action("Index", "Admin")">
                            <img src="../imgs/index.png" alt="" width="20" />
                            <span>首页</span>
                        </a>
                    </li>
                    <!-- 用户管理 -->
                    <li class="layui-nav-item" id="user-manage">
                        <a href="javascript:;">
                            <img src="../imgs/user.png" alt="" width="20" />
                            <span>用户管理</span>
                            <em class="layui-nav-more"></em>
                        </a>
                        <dl class="layui-nav-child">
                            <dd>
                                @Html.ActionLink("用户列表", "UserTable", "Admin")
                            </dd>
                        </dl>
                    </li>
                    <!-- 权限管理 -->
                    <li class="layui-nav-item" id="permission-manage">
                        <a href="javascript:;">
                            <img src="../imgs/permission.png" alt="" width="20" />
                            <span>权限管理</span>
                            <em class="layui-nav-more"></em>
                        </a>
                        <dl class="layui-nav-child">
                            <dd>
                                @Html.ActionLink("角色列表", "Role", "Admin")
                            </dd>
                            @*<dd>
                    @Html.ActionLink("角色授权", "PermissionSet", "Admin")
                </dd>*@
                        </dl>
                    </li>
                    <!-- 项目管理 -->
                    <li class="layui-nav-item" id="task-manage">
                        <a href="javascript:;">
                            <img src="../imgs/task.png" alt="" width="20" />
                            <span>项目管理</span>
                            <em class="layui-nav-more"></em>
                        </a>
                        <dl class="layui-nav-child">
                            <dd>
                                @Html.ActionLink("项目", "Task", "Admin")
                            </dd>
                        </dl>
                    </li>
                    <!-- 文章管理 -->
                    <li class="layui-nav-item" id="article-manage">
                        <a href="javascript:;">
                            <img src="../imgs/article.png" alt="" width="20" />
                            <span>文章管理</span>
                            <em class="layui-nav-more"></em>
                        </a>
                        <dl class="layui-nav-child">
                            <dd>
                                @Html.ActionLink("文章", "Article", "Admin")
                            </dd>
                        </dl>
                    </li>
                    <!-- 分类管理 -->
                    <li class="layui-nav-item" id="class-manage">
                        <a href="javascript:;">
                            <img src="../imgs/class.png" alt="" width="20" />
                            <span>分类管理</span>
                            <em class="layui-nav-more"></em>
                        </a>
                        <dl class="layui-nav-child">
                            <dd>
                                @Html.ActionLink("分类管理", "Class", "Admin")
                            </dd>
                        </dl>
                    </li>
                    <!-- 前台轮播图管理 -->
                    <li class="layui-nav-item" id="carousel-manage">
                        <a href="javascript:;">
                            <img src="../imgs/carousel.png" alt="" width="20" />
                            <span>前台管理</span>
                            <em class="layui-nav-more"></em>
                        </a>
                        <dl class="layui-nav-child">
                            <dd>
                                @Html.ActionLink("轮播图", "Carousel", "Admin")
                            </dd>
                        </dl>
                    </li>
                    <!-- 模块管理 -->
                    <li class="layui-nav-item" id="model-manage">
                        <a href="javascript:;">
                            <img src="../imgs/model.png" alt="" width="20" />
                            <span>模块管理</span>
                            <em class="layui-nav-more"></em>
                        </a>
                        <dl class="layui-nav-child">
                            <dd>
                                @Html.ActionLink("模块", "MModule", "Admin")
                            </dd>
                        </dl>
                    </li>
                    <!-- 日志管理 -->
                    <li class="layui-nav-item" id="record-manage">
                        <a href="javascript:;">
                            <img src="../imgs/record.png" alt="" width="20" />
                            <span>日志管理</span>
                            <em class="layui-nav-more"></em>
                        </a>
                        <dl class="layui-nav-child">
                            <dd>
                                @Html.ActionLink("登陆日志", "LoginRecord", "Admin")
                            </dd>
                        </dl>
                    </li>
                </ul>
            </div>
        </div>

        <!-- 左侧侧边导航结束 -->
        <!-- 右侧主体内容 -->
        <div class="layui-body" id="larry-body" style="bottom: 0;border-left: solid 2px #2299ee;">
