            $(document).ready(function () {

                $('#example').DataTable({
                    dom: 'Bfrtip',
                    language: {
                        emptyTable: '没有数据',
                        loadingRecords: '加载中...',
                        processing: '查询中...',
                        search: '检索:',
                        lengthMenu: '',
                        zeroRecords: '没有数据',
                        paginate: {
                            'first': '',
                            'last': '',
                            'next': '',
                            'previous': ''
                        },
